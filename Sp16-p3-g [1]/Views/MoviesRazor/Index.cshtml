@model IEnumerable<Sp16_p3_g__1_.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="panel panel-info box-shadow--16dp" style="border:1.3px solid #000000;">
    <div class="panel-heading box-shadow--16dp" style="border:.6px thin #000000;">
        <div class="panel-title" style="border:.6px thin #000000;">
            <h3><center><font color="black">Movies</font></center></h3>
            @Html.ActionLink("New", "Create")
        </div>
    </div><br />

    <table class="table table-bordered box-shadow--16dp">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdultPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeniorPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChildPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRating)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdultPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeniorPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChildPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieRating)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
                    
                </td>
            </tr>
        }

    </table>
 </div>